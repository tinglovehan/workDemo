.details {
    background-color: #fff;
    padding: 10rpx 20rpx;
    overflow: hidden;
}
.title {
    font-size: 32rpx;
    color: #333;
    padding: 8rpx 0;
    margin-bottom: 5rpx;
}
.details .line {
    border-top: 1px solid #eee;
}
.newsInfo {
    padding: 10rpx 0;
}
.creatTime {
    color: #fe9801;
    font-size: 26rpx;
}
.newsDetailsWrap {
    background-color: #fff;
    padding: 15rpx;
    min-height: 100rpx;
    font-size: 24rpx;
    line-height: 150%;
    color: #333;
}
.newsDetailsWrap-p {
    margin-bottom: 10rpx;
}