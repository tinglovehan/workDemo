.home-banner {
    width: 100%;
    height: 380rpx;
    overflow: hidden;
    position: relative;
}
.home-banner .swiper-slide {
    height: 380rpx;
    position: relative;
    width: 100%;
}
.swiper-slide image{
  width: 100%;
}
.home-banner-a {
    display: block;
    height: 100%;
}
.home-banner .name {
    position: absolute;
    bottom: 0;
    left: 0;
    width: 100%;
    font-size: 28rpx;
    height: 58rpx;
    line-height: 58rpx;
    overflow: hidden;
    color: #fff;
    background-color: rgba(0,0,0,.4);
    text-indent: 1em;
    text-overflow: ellipsis;
    white-space: nowrap;
    z-index: 2;
}
.page-list-img {
    width: 262rpx;
    height: 212rpx;
        float: left;
    overflow: hidden;
}
.page-list-img image {
    width: 100% !important;
    height: 100%;
}
.page-list-li{
    border-bottom: 1px solid #eee;
    padding: 20rpx;
    background-color: #fff;
    overflow: hidden;
}
.page-list-li-a {
    display: block;
}
.page-list-info {
    margin-left: 270rpx;
    min-height:180rpx;
    height: auto;
}
.page-list-title {
    padding-top: 10rpx;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
    font-size: 28rpx;
    color: #333;
    height: 44rpx;
    line-height: 44rpx;
}
.page-list-article {
    font-size: 24rpx;
     max-height: 100rpx;
    min-height: 60rpx;
    line-height: 150%;
}