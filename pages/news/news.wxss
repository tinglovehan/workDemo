.news-list-li {
    padding: 10rpx 20rpx;
    font-size: 24rpx;
    text-indent: 10rpx;
    overflow: hidden;
    border-bottom: 1px solid #ddd;
}
.news-list-li-a {
    display: block;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
}
.news-list  .title {
    height: 70rpx;
    line-height: 70rpx;
    font-size: 28rpx;
    color: #333;
    padding: 10rpx 0;
    font-weight: 400;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
    border-bottom: 1px solid #eee;
}
.news-list  .title .icon-ldang{
  display: block;
  float: left;
  font-size: 32rpx;
  color: #f90;
  margin-top: 20rpx;

}
.news-list .content {
    color: #666;
    font-size:  24rpx;
    padding: .35rem 0;
    margin-top: .15rem;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
    clear: left;
}
.news-list .content .icon-yjt{
  color: #999;
}

