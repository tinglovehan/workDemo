page{
  background: #f4f4f4;
}
.header-tab {
    padding-bottom: 0;
    width: 100%;
    height:98rpx;
    position: relative;
    z-index: 34;
}
.order-tab {
    height: 98rpx;
    line-height: 98rpx;
    background-color: #fff;
}
.balanceTab-li {
    width: 33.3%;
    position: relative;
    text-align: center;
    font-size: 28rpx;
}
.balanceHead {
    background-color: #f1f1f1;
    height: 76rpx;
    line-height: 76rpx;
    text-align: center;
    border-bottom: 1px solid #ccc;
    color: #666;
}
.balanceHead-span {
  text-align: center;
}
.balanceHead-span, .balanceTr-span {
    font-size: 26rpx;
    text-align: center;
    display: inline-block;
    vertical-align: middle;
}
.generateTime {
    width: 42%;
    color: #666;
    font-size: 26rpx;
}
 .tradeType {
    width: 28%;

}
.tradeSum {
    width: 28%;
    color: #666;
   
}
.page-list {
    background-color: #fff;
}
.opacity {
    -webkit-animation: opacity 0.5s linear;
    animation: opacity 0.5s linear;
}
.balanceTr {
    text-align: center;
    background-color: #fff;
    color: #333;
    font-size: 24rpx;
    border-bottom: 1px solid #eee;
    padding: 40rpx 0;
}
.balanceTr-a {
    display: block;
}
.tradeType.refund {
    color: #3596f7;
}
.tradeType.pay {
    color: #f90;
}